<!DOCTYPE html>
<html>
  <head>
    <title>Trippin</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Montserrat|Oswald' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <div class='navbar'>
      <h2>Trippin</h2>
      <% if current_user  %>
        <section class="admin">
          <p class='user_name'>Welcome, <%= current_user.first_name %><p>
          <%= link_to 'Search', search_path, :class => 'navbar-text' %>
          <%= link_to 'Logout', logout_path, method: :delete, :class => 'navbar-text' %>
        </section>
      <% else %>
        <section class='admin'>
          <%= image_tag 'person-1.png', :class => "admin-logo" %>
          <%= link_to 'Sign in with Google', google_login_path, :class => 'sign-in-text' %>
        </section>
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
    <% end %>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
