<!DOCTYPE html>
<html>
  <head>
    <title>Trippin</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header class="main-header">
    <a><%= image_tag 'ideabox1.png', :class => "main-logo"%></a>
    </header>
    <div class="navbar">
      <nav id="main_nav">
        <section class="admin">
          <%= image_tag 'register.png', :class => "register-logo" %>
          <%= link_to "New User", '#', :class => "admin-logo-text" %>
          <%= image_tag 'person-1.png', :class => "admin-logo" %>
          <%= link_to "Login", '#', :class => "admin-logo-text" %>
        </section>
      </nav>
    </div>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
    <% end %>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
